{
    "manifest_version": 2,

    "name": "Tab Utils",
    "description": "Toggle, duplicate and move tab to new window",
    "version": "1.1.1",

    "background": {
        "scripts": ["bg.js"]
    },

    "icons": {
      "16": "tabs.png",
      "48": "tabs.png",
      "128": "tabs.png"
    },

    "browser_action": {
        "default_icon": "tabs.png",
        "default_title": "Tab Utils"
    },
    "commands": {
        "toggle-tabs": {
            "suggested_key": {
                "default": "Alt+Q",
                "windows": "Alt+Q",
                "mac": "Alt+Q"
            },
            "description": "Toggle tabs"
        },
        "pop-tab-out": {
          "suggested_key": {
              "default": "Ctrl+Shift+Down",
              "windows": "Ctrl+Shift+Down",
              "mac": "Alt+Shift+Down"
          },
          "description": "Move tab into new window"
        },
        "duplicate-tab": {
          "suggested_key": {
              "default": "Alt+D",
              "windows": "Alt+D",
              "mac": "Alt+D"
          },
          "description": "Duplicate tab"
        }
    },
    "permissions": [
        "activeTab",
        "tabs"
    ]
}
